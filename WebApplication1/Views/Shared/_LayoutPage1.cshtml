<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        #top {
            width: 100%;
            height: 300px;
            background-color: lightblue;
        }

        #content {
            width: 200%;
            height: 500px;
            background-color: lightgrey;           
        }

        #footer {
            width: 100%;
            height: 100px;
            background-color: lightgreen;
        }
        #fm-menu li{
            list-style:none;
            display:inline-block;
            background-color:lawngreen;
            padding:10px;
            border-radius:10px 20px;
            margin-right:10px;
        }
        #left-side{
            width:20%;
            height:auto;
            float:left;
        }
        #right-side{
            width:50%;
            height:auto;
            float:left;
        }
        #fm-banner{
            width:100%;
            height:200px;
            
        }


    </style>
</head>
<body>
    <div id="top">
        <div id="menu">
            <ul id="fm-menu">
                <li>Trang chu</li>
                <li>San pham</li>
                <li>Gioi thieu</li>
            </ul>
            menu
        </div>
        <div id="banner">
            <img src="~/hinh/anhnen.jpg" id="fm-banner" alt="Day la banner" title="cty du lich"/>
        </div>
    </div>   
    <div id="content">
        <div id="left-side">
            
        </div>
        <div id="right-side">
            @RenderBody()
        </div>     
    </div>
    <div id="footer">
        Footer
    </div>


</body>
</html>
