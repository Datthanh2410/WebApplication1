<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        #top {
            width: 100%;
            height: 300px;
            background-color: lightblue;
        }

        #content {
            width: 100%;
            height: 800px;
            background-color: lightgrey;
        }

        #footer {
            width: 100%;
            height: 100px;
            background-color: lightgreen;
        }

        #fm-menu li {
            list-style: none;
            display: inline-block;
            background-color: lawngreen;
            padding: 10px;
            border-radius: 10px 20px;
            margin-right: 10px;
        }

        #left-side {
            width: 20%;
            height: auto;
            float: left;
        }

        #right-side {
            width: 50%;
            height: auto;
            float: left;
        }

        #fm-banner {
            width: 100%;
            height: 200px;
        }

        #icon-img {
            width: 50px;
            height: 5%;
            bottom: 150px;
            right: 100px;
            position: fixed;
        }

        #fm-menu a {
            text-decoration: none;
        }

        #left-side {
            float: left;
            background-color: lightpink;
            width: 20%;
            height: 800px;
        }

        #right-side {
            float: right;
            background-color: lightyellow;
            width: 80%;
            height: 800px;
        }

        #fm-menu-left {
            text-align: center;
        }

        #fm-menu-left li {
                list-style: none;
                background-color: lightcoral;
                padding: 10px;
                border-radius: 10px 20px;
                margin-bottom: 10px;
                margin-right: 20px;
                margin-left: -20px;
        }

        #fm-menu-left a {
             text-decoration: none;
        }

        #fm-item-left-menu {
            display: block;
            background-color: coral;
            padding: 10px;
            margin-bottom: 10px;
            width: 100px;
            border-radius: 20px 20px;
            margin-top: 20px;
        }
        #fm-item-left-menu  {
              text-decoration: none;
        }       
        #left-side a {
            margin-left: 30px;
        }
    </style>
</head>
<body>
    <div id="top">
        <div id="menu">
            <ul id="fm-menu">
                <li><a href="/TrangChu/Index">Trang chu</a></li>
                <li><a href="/TrangChu/SanPham">San pham</a></li>
                <li><a href="/TrangChu/GioiThieu">Gioi thieu</a></li>
            </ul>
            
        </div>
        <div id="banner">
            <img src="~/hinh/anhnen.jpg" id="fm-banner" alt="Day la banner" title="cty du lich"/>
        </div>
    </div>   
    <div id="content">
        <div id="left-side">
            <a href="/TrangChu/Index" id="fm-item-left-menu">Trang chu</a>
            <hr size="8" style="border-color:aliceblue;background-color:mediumblue;" />
            <a href="/TrangChu/SanPham" id="fm-item-left-menu">San pham</a>
            <hr size="8" style="border-color:aliceblue;background-color:mediumblue;" />
            <a href="/TrangChu/GioiThieu" id="fm-item-left-menu">Gioi thieu</a>
            <hr size="8" style="border-color:aliceblue;background-color:mediumblue;" />
        </div>
        <div id="right-side">
            @RenderBody()
            <a href="#top">
                <img src="~/hinh/traitao.png" id="icon-img" />
            </a>
        </div>              
    </div>
    <div id="footer" style="clear:both; text-align:center;padding:5px;">
        Cty du lich       
    </div>
</body>
</html>
